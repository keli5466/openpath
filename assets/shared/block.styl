.block
	position relative
	display block
	margin (gutter) 0
	@media (max-width mobile)
		margin gutter-mobile 0

.content-left
	display flex
	position relative
	align-items center
	width 50%
	background offwhite
	@media (max-width mobile)
		width 100%

.content-right
	width 50%
	align-items center
	display flex
	position relative
	@media (max-width mobile)
		width 100%

.flex
	display flex
	background offwhite
	align-content center
	@media (max-width mobile)
		flex-direction column


.text-content
	padding-left rem(100px)
	padding-right rem(100px)
	order 1
	width 100%
	.subhead
		max-width rem(365px)
	@media (max-width tablet-landscape)
		padding-left 6vw
		padding-right 6vw
	@media (max-width mobile)
		width 100%
		padding rem(block-v-spacing) rem(block-spacing)
		.headline
			font-size 24px, true

		.subhead
			font-size 18px, true
			line-height normal

		.cta
			display none


.bkgd
	position absolute
	top 0
	left 0
	width 100%
	height 100%
