.phones
	position absolute
	left 0
	bottom 0
	width 50%
	max-width 100%
	aspect-ratio(361/452)
	z-index 2

	@media (max-width mobile)
		width 80%

>>> .phone
	position absolute
	bottom 0
	width 100%
	height 100%
	opacity 0
	transform translateY(100%)
	transition opacity 1000ms ease-in-out,
						 transform 1000ms ease-in-out

	&.phone-0, &.phone-1
		width 60%

	.lock-1
		bottom 24%
		left 20%

	.lock-2
		bottom 13%
		left 20%

	.lock-3
		bottom 1.8%
		left 20%

	img
		h-center()
		bottom 0
		max-height 100%

	.vv-slot
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.phone-lock
		opacity 1
		position absolute
		width 18%
		aspect-ratio(1)

	.locked, .unlocked
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.locked
		opacity 1

	.unlocked
		opacity 0

	&.phone-2
		.phone-lock
			display none !important

		@media (max-width mobile)
			bottom -20%

	&.init
		opacity 1
		transform translateY(0)

	&.reset
		opacity 0
		transform translateY(100%)

	&.step-1
		opacity 1
		transform translateY(0)

		.locked
			animation toggleOut 200ms forwards
		.unlocked
			animation toggleLock 400ms forwards

		.lock-0
			.locked
				animation-delay 0ms
			.unlocked
				animation-delay 200ms
		.lock-1
			.locked
				animation-delay 400ms
			.unlocked
				animation-delay 600ms
		.lock-2
			.locked
				animation-delay 800ms
			.unlocked
				animation-delay 1000ms
		.lock-3
			.locked
				animation-delay 1200ms
			.unlocked
				animation-delay 1400ms
